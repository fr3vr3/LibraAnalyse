@page
@model LibraAnalyse.Pages.QueryModel

<!DOCTYPE html>
<html>
<head>
    <title>Query ClickHouse</title>
</head>
<body>
    <h1>Query ClickHouse</h1>

    <form id="queryForm">
        <label for="sqlQuery">Enter SQL Query:</label>
        <input type="text" id="sqlQuery" name="sqlQuery" />
        <button type="button" onclick="executeQuery()">Run Query</button>
    </form>

    <div id="result">
        <!-- Results will be displayed here -->
    </div>

    <script>
        async function executeQuery() {
            const query = document.getElementById('sqlQuery').value;
            const response = await fetch(`/api/ClickHouse/query?sqlQuery=${encodeURIComponent(query)}`);
            const result = await response.json();
            document.getElementById('result').innerText = JSON.stringify(result, null, 2);
        }
    </script>
</body>
</html>
