@page
@model LibraAnalyse.Pages.QueryModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Query ClickHouse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center">Query ClickHouse</h1>

        <!-- Form for listing all tables -->
        <form method="post">
            <div class="query-section mb-4">
                <h2>List All Tables</h2>
                <button type="submit" asp-page-handler="ListTables" class="btn btn-primary">List Tables</button>
            </div>
        </form>

        <!-- Form for describing a specific table -->
        <form method="post">
            <div class="query-section mb-4">
                <h2>Describe a Table</h2>
                <label for="tableName" class="form-label">Enter Table Name:</label>
                <input type="text" id="tableName" name="tableName" class="form-control" placeholder="Enter table name, e.g., 'user_transaction'" />
                <button type="submit" asp-page-handler="DescribeTable" class="btn btn-primary mt-2">Describe Table</button>
            </div>
        </form>

        <!-- Form for executing a custom SQL query -->
        <form method="post">
            <div class="query-section mb-4">
                <h2>Custom SQL Query</h2>
                <label for="sqlQuery" class="form-label">Enter SQL Query:</label>
                <textarea id="sqlQuery" name="SqlQuery" class="form-control" rows="4">@Model.SqlQuery</textarea>
                <button type="submit" asp-page-handler="ExecuteQuery" class="btn btn-primary mt-2">Run Query</button>
            </div>
        </form>

        <!-- Display query results -->
        @if (Model.QueryResult != null)
        {
            <div id="result" class="mt-4">
                <h3>Query Results:</h3>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            @foreach (System.Data.DataColumn column in Model.QueryResult.Columns)
                            {
                                <th>@column.ColumnName</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.QueryResult.Rows)
                        {
                            <tr>
                                @foreach (var item in row.ItemArray)
                                {
                                    <td>@item</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Display error messages -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">
                @Model.ErrorMessage
            </div>
        }
    </div>
</body>
</html>
