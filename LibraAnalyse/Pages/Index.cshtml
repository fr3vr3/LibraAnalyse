@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container text-center">
    <header class="my-5">
        <h1 class="display-3" style="color: #2c3e50;">LibraAnalyse</h1>
        <p class="lead" style="color: #34495e;">Your gateway to data insights</p>
        <nav class="nav justify-content-center">
            <a class="nav-link" href="/Query" style="color: #2980b9;">Run Queries</a>
            <a class="nav-link" href="/InterestingData" style="color: #2980b9;">Interesting Data</a>
            <a class="nav-link" href="/Documentation" style="color: #2980b9;">Documentation</a>
        </nav>
    </header>

    <section class="my-5">
        <h2 style="color: #2980b9;">Welcome to LibraAnalyse</h2>
        <p style="color: #34495e;">Explore the world of data with our powerful querying tools. Whether you’re looking to extract insights or analyze trends, LibraAnalyse is here to assist you.</p>
        <a href="/Query" class="btn btn-primary" style="background-color: #2980b9; border-color: #2980b9;">Get Started</a>
    </section>

    <section class="my-5">
        <h3 style="color: #2c3e50;">Explore Interesting Data</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #2980b9;">Real-time Analytics</h5>
                        <p class="card-text" style="color: #34495e;">Access the latest trends and analytics data directly from our database.</p>
                        <a href="/InterestingData/RealTimeAnalytics" class="btn btn-link" style="color: #2980b9;">Explore Data</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #2980b9;">Historical Data</h5>
                        <p class="card-text" style="color: #34495e;">Dive into our archives to analyze historical data and identify trends over time.</p>
                        <a href="/InterestingData/HistoricalData" class="btn btn-link" style="color: #2980b9;">Explore Data</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #2980b9;">Data Reports</h5>
                        <p class="card-text" style="color: #34495e;">View comprehensive reports generated from our data sets, providing deep insights.</p>
                        <a href="/InterestingData/Reports" class="btn btn-link" style="color: #2980b9;">Explore Data</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="my-5">
        <p style="color: #34495e;">&copy; 2024 LibraAnalyse</p>
        <p><a href="/Privacy" style="color: #2980b9;">Privacy Policy</a></p>
    </footer>
</div>
